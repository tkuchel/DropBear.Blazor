@inject IPageAlertService AlertService
@using DropBear.Blazor.Interfaces

<div class="page-alert-container">
    @foreach (var alert in AlertService.Alerts.OrderByDescending(a => a.CreatedAt))
    {
        <DropBearPageAlert
            Title="@alert.Title"
            Message="@alert.Message"
            Type="@alert.Type"
            Theme="@alert.Theme"
            IsDismissible="@alert.IsDismissible"
            OnClose="@(() => AlertService.RemoveAlert(alert.Id))"/>
    }
</div>
