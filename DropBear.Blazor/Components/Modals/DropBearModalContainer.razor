@inject IModalService ModalService
@implements IDisposable
@using DropBear.Blazor.Interfaces
@inherits DropBear.Blazor.Components.Bases.DropBearComponentBase

@foreach (var modal in ModalService.GetAllModals())
{
    <DropBearModal Id="@modal.Id"
                   Title="@modal.Title"
                   Theme="@modal.Theme"
                   Buttons="@modal.Buttons"
                   CloseOnBackdropClick="@modal.CloseOnBackdropClick">
        <BodyContent>
            @modal.BodyContent
        </BodyContent>
    </DropBearModal>
}
