@typeparam T
@inherits DropBear.Blazor.Components.Bases.DropBearComponentBase

<div class="drop-bear-list @(IsCollapsed ? "drop-bear-list--collapsed" : "")" style="@($"--header-bg-color: {HeaderColor}")">
    <div class="drop-bear-list-header" @onclick="ToggleCollapse">
        <h3 class="drop-bear-list-title">
            @if (!string.IsNullOrEmpty(HeaderIcon))
            {
                <i class="@HeaderIcon"></i>
            }
            @Title
        </h3>
        <i class="fas fa-chevron-up drop-bear-list-icon"></i>
    </div>
    <ul class="drop-bear-list-list">
        @foreach (var item in Items)
        {
            <li class="drop-bear-list-item">
                @if (ItemTemplate != null)
                {
                    @ItemTemplate(item)
                }
                else
                {
                    @item.ToString()
                }
            </li>
        }
    </ul>
</div>
